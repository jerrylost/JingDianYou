<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/rendezvous_header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/banner_layout"/>

            <LinearLayout
                android:padding="@dimen/d_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/ll_rendezvous_you"
                    android:layout_marginRight="@dimen/d_5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#f9a294"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="210dp">

                    <TextView
                        android:text="@string/string_rendezvous_you"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_marginTop="@dimen/d_10"
                        android:src="@mipmap/main_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/d_5"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <LinearLayout

                        android:id="@+id/ll_rendezvous_nearby"
                        android:layout_marginBottom="@dimen/d_5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="#b8eb95"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <TextView
                            android:text="@string/string_nearby"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_marginTop="@dimen/d_10"
                            android:src="@mipmap/main_side"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_rendezvous_chat"
                        android:layout_marginTop="@dimen/d_5"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="#91e0e4"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <TextView
                            android:text="@string/string_chat"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_marginTop="@dimen/d_10"
                            android:src="@mipmap/main_talk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/d_5"
                android:paddingLeft="@dimen/d_10"
                android:paddingRight="@dimen/d_10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_rendezvous_onway"
                    android:layout_marginRight="@dimen/d_5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#af9efe"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp">

                    <TextView
                        android:text="@string/string_onway"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_marginTop="@dimen/d_10"
                        android:src="@mipmap/main_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_rendezvous_tucao"
                    android:layout_marginLeft="@dimen/d_5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#fbe47b"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="100dp">

                    <TextView
                        android:text="@string/string_tocao"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_marginTop="@dimen/d_10"
                        android:src="@mipmap/main_com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>