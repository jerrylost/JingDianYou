<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginLeft="@dimen/d_10"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_100">
        <com.pqc.jingdianyou.view.CircleImageView

            android:id="@+id/iv_onway_detail_photo"
            android:layout_marginLeft="@dimen/d_5"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/d_80"
            android:layout_height="@dimen/d_80" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:padding="@dimen/d_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_onway_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/tv_onway_detail_data"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:paddingLeft="@dimen/d_5"
                android:paddingRight="@dimen/d_5"
                android:layout_marginLeft="@dimen/d_5"
                android:id="@+id/tv_onway_detail_sex"
                android:gravity="center"
                android:drawablePadding="@dimen/d_5"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="@dimen/d_10"
        android:singleLine="true"
        android:id="@+id/tv_onway_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:paddingLeft="@dimen/d_10"
        android:id="@+id/ll_onway_detail_photos"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>
    <TextView
        android:layout_marginLeft="@dimen/d_10"
        android:id="@+id/tv_onway_detail_location"
        android:drawableLeft="@mipmap/way_location"
        android:text="北疆是"
        android:drawablePadding="@dimen/d_5"
        android:textColor="@color/green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="@dimen/d_10"
        android:id="@+id/tv_onway_detail_praise_count"
        android:layout_marginTop="@dimen/d_5"
        android:drawableLeft="@mipmap/way_zan"
        android:text="3 人觉得很赞"
        android:drawablePadding="@dimen/d_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <include layout="@layout/under_line"/>
    <TextView
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/d_20"
        android:id="@+id/tv_onway_comment_count"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_40" />
    <include layout="@layout/under_line"/>
    <LinearLayout
        android:layout_marginTop="@dimen/d_20"
        android:id="@+id/ll_onway_detail_remind"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@mipmap/monkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="@dimen/d_10"
            android:textColor="@color/gray"
            android:text="@string/string_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>