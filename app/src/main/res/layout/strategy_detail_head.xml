<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@color/green"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/strategy_detail_head_relative"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/back"
        android:layout_marginLeft="@dimen/d_5"
        android:layout_marginTop="@dimen/d_5"
        android:onClick="doBack"
        />

    <ImageView
        android:id="@+id/detail_shou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/detail_shou"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/d_10"
        android:onClick="onCollect"
        />

    <ImageView
        android:id="@+id/onPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/strategy_address"
        android:layout_toLeftOf="@id/detail_shou"
        android:layout_marginRight="@dimen/d_20"
        android:onClick="onPosition"
        />
</RelativeLayout>