<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/d_5"
              android:orientation="horizontal"
              android:id="@+id/ll_travel_item"
              android:background="#ffffff">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="@dimen/d_5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_travel_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/btn_booking_know"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:text="预定须知  >"
            android:layout_marginTop="@dimen/d_10"
            android:textSize="@dimen/s_15"
            android:textColor="#6ccfaa"
            android:background="#fffdfd"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        android:layout_width="@dimen/d_1"
        android:layout_height="@dimen/d_80"
        android:background="#ccc"
        android:layout_marginLeft="@dimen/d_5"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_margin="@dimen/d_2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF4500"
                android:textSize="@dimen/d_18"
                android:text="¥"/>

            <TextView
                android:id="@+id/tv_travel_sales_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF4500"
                android:textSize="@dimen/d_18"
                android:text=""/>

            <TextView
                android:layout_marginLeft="@dimen/d_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/up"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_travel_market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@mipmap/line"
            android:textSize="@dimen/d_18"/>

        <TextView
            android:id="@+id/tv_travel_give_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@mipmap/fanquan_bg"
            android:textColor="#f13228"
            android:layout_marginTop="@dimen/d_10"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="@dimen/d_60"
        android:layout_height="@dimen/d_60"
        android:layout_gravity="center_vertical"
        android:background="@mipmap/detail_book"
        android:layout_marginLeft="@dimen/d_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="预定"
                android:textSize="@dimen/s_20"
                android:textColor="#f9f5f5"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/img_travel_payment_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d_20"
                android:background="@mipmap/zxzf"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>