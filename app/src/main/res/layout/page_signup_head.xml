<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/green"
              android:padding="@dimen/d_5"
    >

    <LinearLayout
        android:padding="@dimen/d_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_scenic_detail_back"
            android:layout_width="@dimen/d_25"
            android:layout_height="@dimen/d_25"
            android:src="@mipmap/back"
            android:clickable="true"
            android:layout_marginRight="@dimen/d_5"
            android:onClick="onBack"
            />

        <TextView
            android:id="@+id/tv_detail_scenic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_person_introduce"
            android:textSize="@dimen/s_25"
            android:textColor="#e5faf8f8"
            android:layout_marginLeft="@dimen/d_5"/>


    </LinearLayout>

</LinearLayout>