<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_marginLeft="@dimen/d_5"
              android:padding="@dimen/d_10"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="@dimen/d_100">

    <com.jerry.jingdianyou.view.CircleImageView
        android:id="@+id/iv_sign_up_photo"
        android:layout_marginLeft="@dimen/d_5"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/d_80"
        android:layout_height="@dimen/d_80"/>

    <LinearLayout
        android:paddingLeft="@dimen/d_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="@dimen/d_5"
            android:id="@+id/tv_sign_up_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tv_sign_up_sex"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/d_5"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/d_5"
            android:layout_width="@dimen/d_55"
            android:layout_height="@dimen/d_20"/>

        <TextView
            android:singleLine="true"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/d_5"
            android:textColor="@color/gray"
            android:id="@+id/tv_sign_up_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</LinearLayout>