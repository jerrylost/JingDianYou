<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:background="@color/green"
                android:layout_width="match_parent"
                android:layout_height="55dp">

    <Button
        android:onClick="doBack"
        android:layout_marginLeft="@dimen/d_5"
        android:background="@null"
        android:id="@+id/bt_rendezvous_back"
        android:drawableLeft="@mipmap/arrow1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="@string/string_rendezvous_you"
        />

    <ImageButton
        android:background="@null"
        android:onClick="selectSex"
        android:scaleType="center"
        android:id="@+id/iv_rendezvous_select"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:src="@mipmap/more"/>
</RelativeLayout>