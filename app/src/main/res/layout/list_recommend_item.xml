<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:background="#ffffff"
              android:padding="@dimen/d_5"
              android:id="@+id/ll_recom_list_item">

    <com.jerry.jingdianyou.view.RoundImageView
        android:id="@+id/img_recommend_scenic_pic"
        android:layout_width="@dimen/d_80"
        android:layout_height="@dimen/d_80"
        android:scaleType="fitXY"
        android:background="@mipmap/empty_photo"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/d_80"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_recommend_scenic_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/s_20"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_recommend_scenic_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/s_18"
            android:textColor="#8e8b8b"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d_80"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_recommend_scenic_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FF4500"
                android:textSize="@dimen/d_18"
                android:text="Â¥1"/>

            <TextView
                android:id="@+id/tv_up"
                android:layout_marginLeft="@dimen/d_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/up"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_recommend_market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:background="@mipmap/line"
            android:layout_marginTop="@dimen/d_10"
            android:visibility="gone"
            android:textSize="@dimen/d_18"/>
    </LinearLayout>

</LinearLayout>