<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_100">

        <com.jerry.jingdianyou.view.CircleImageView
            android:id="@+id/iv_chat_photo"
            android:layout_marginLeft="@dimen/d_5"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/d_80"
            android:layout_height="@dimen/d_80"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:id="@+id/tv_chat_member_name"
                    android:padding="@dimen/d_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    />

                <TextView
                    android:textColor="@color/gray"
                    android:id="@+id/tv_chat_distance"
                    android:layout_marginRight="@dimen/d_10"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/d_30"
                    android:padding="@dimen/d_5"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_chat_sex"
                android:layout_marginLeft="@dimen/d_10"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/d_5"
                android:textColor="@color/white"
                android:paddingLeft="@dimen/d_5"
                android:layout_width="@dimen/d_55"
                android:layout_height="@dimen/d_20"/>

            <TextView
                android:layout_marginTop="@dimen/d_5"
                android:textColor="@color/gray"
                android:id="@+id/tv_signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>